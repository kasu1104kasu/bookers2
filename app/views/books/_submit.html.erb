<% if book.errors.any? %>
  <div id="error_explanation">
    <h2 class="devise-error-messages">
      <%= book.errors.count %><span> errors prohibited this book from being saved:</span>
    </h2>
    <ul class="devise-error-messages">
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2 class="mt-3">New book</h2>
<%= form_with model:book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <p class="submit"><%= f.submit 'Create Book' %></p>
<% end %>



