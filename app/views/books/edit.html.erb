<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h1>Editing Book</h1>
       <% if @book.errors.any? %>
       <h3 class="error"><%= @book.errors.count %><span> errors prohibited this book from being saved:</span></h3><br>
       <% @book.errors.full_messages.each do |message| %>
       <h6 class="error"><%= message %></h6><br>
       <% end %>
       <% end %>
       <br>
          <%= form_with model:@book, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Body</h4>
          <%= f.text_area :body %>
          <p class="submit"><%= f.submit 'Update Book' %></p>
          <% end %>
          <span><%= link_to "Show", book_path(@book) %></span> |  <a class="back" href="/books">Back</a>
    </div>
  </div>
</div>


