<div class="container px-5 px-sm-0">
  <div class="row">
  <div class="col-md-3">
    <%= render 'books/info', user: @user %>

    <%= render 'books/submit', book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h1>Users</h1>
    <table class="table table-hover table-inverse">
      <thread>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thread>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, size: '40x40', fallback: "no_image.jpg"%></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
         </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>


